const skills = [
  "HTML",
  "CSS",
  "JavaScript",
  "Tailwind CSS",
  "React",
  "Astro",
  "Node.js",
  "Express.js",
  "Git/GitHub",
  "MySQL",
  "Next.js",
  "Python",
  "Django",
  "Adobe Xd",
  "Postman",
